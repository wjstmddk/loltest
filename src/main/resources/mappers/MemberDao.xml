<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.lol_test.dao.MemberDao">
    <select id="login" parameterType="HashMap" resultType="boolean">
        select count(*)from member2 where id=#{id} and pw=#{pw}
    </select>
    <insert id="join" parameterType="org.example.lol_test.dto.MemberDto">
        insert into member2 values(#{id},#{pw},#{lolId})
    </insert>
    <select id="getSecurityPw" parameterType="String" resultType="String">
        select pw from member2 where id=#{id}
    </select>
    <select id="getMemberInfo" resultType="org.example.lol_test.dto.MemberDto">
        select * from member2 where id=#{id}
    </select>
    <select id="idcheck" resultType="String">
        select id from member2 where id=#{id}
    </select>
</mapper>
